<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">14sp</item>
        <item name="android:editTextColor">@null</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="strokeColor">@color/green_dark</item>
        <item name="strokeWidth">10dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green_dark</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="Label">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Label.Secondary" parent="Label">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Date" parent="Label.Secondary">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/light_blue_900</item>
    </style>

    <style name="AmountStyle">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/light_blue_900</item>
    </style>

    <style name="Error">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:background">@drawable/border_primary</item>
        <item name="android:textColor">@color/green_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:padding">@dimen/medium_margin</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Theme.PesoMakaNan.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.PesoMakaNan.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="TabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
</resources>